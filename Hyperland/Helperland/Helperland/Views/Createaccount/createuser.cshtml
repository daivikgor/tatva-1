
@{
    ViewData["Title"] = "createuser";
}

<!DOCTYPE html>


<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <link rel="stylesheet" href="~/Assets/css/contactus.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="icon" href="~/Assets/image/white-logo-transparent-background-copy-4.png" type="image/icon type">

</head>
<body>
    <nav class="navbar navbar-expand-md fixed-top" style="background-color: #525252;min-height: 54px;">
        <a href="@Url.Action("Index","Home")" class="navbar-brand"><img src="~/Assets/image/white-logo-transparent-background.png" style="width: 73px;height: 54px;"></a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon">
                <i class="fas fa-bars" style="color: white;font-size: 28px;"></i>
            </span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ml-auto text-center">
                <li class="nav-item Rounded-Rectangle" style="background-color: #29626D;">
                    <a href="#" class="nav-link">
                        Book Now
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Prices","Home")" class="nav-link Rounded-Rectangle">
                        Prices & Services
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        Warranty
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        Blog
                    </a>
                </li>
                <li class="@Url.Action("Contact","Contact")">
                    <a href="#" class="nav-link">
                        Contact
                    </a>
                </li>
                <li class="nav-item Rounded-Rectangle" style="background-color: #29626D;">
                    <a href="#" class="nav-link">
                        Login
                    </a>
                </li>
                <li class="nav-item Rounded-Rectangle" style="background-color: #29626D;">
                    <a href="#" class="nav-link">
                        Become a Helper
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <section class="contact-section">
        <div class="container">
            <h1 class="txt-contact">Create Account</h1>
            <div class="diamond">
                <hr class=diam-break-left>
                <img src="~/Assets/image/forma-1-copy-5.png" class="img-diamond">
                <hr class="diam-break-right">
            </div>
        </div>
    </section>

    <section>
        <form method="post" class="form-section">
            <div class="container">
                <div class="row justify-content-center ">
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <input class="form-control" type="text" id="fname" placeholder="First Name">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <input class="form-control" type="text" id="lname" placeholder="Last Name">
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center ">
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <input class="form-control" type="email" id="email" placeholder="Email address">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">+49</div>
                                </div>
                                <input class="form-control" type="tel" id="MobileNo" placeholder="Phone Number">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center ">
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <input class="form-control" type="password" id="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <input class="form-control" type="password" id="confirm_pswd" placeholder="Confirm Password">
                        </div>
                    </div>
                </div>


                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-12 col-12 form-group">
                        <label class="checkbox-inline">
                            <input type="checkbox" class="form-check-inline" required style="height:auto;">
                            <span class="terms">Yes, I would like to subscribe to the newsletter of Helperland GmbH with vouchers, trends, promotions and individualized offers. I can unsubscribe from the newsletter at any time in the newsletter and in the customer account itself.</span>
                        </label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-12 col-12 form-group">
                        <label class="checkbox-inline">
                            <input type="checkbox" class="form-check-inline" required style="height:auto;">
                            <span class="terms">I agree with the <a href="">terms and conditions</a> of Helperland GmbH.</span>
                        </label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-12 col-12 form-group">
                        <label class="checkbox-inline">
                            <input type="checkbox" class="form-check-inline" required style="height: auto;">
                            <span class="terms">I have read the <a href="">privacy policy</a> .</span>
                        </label>
                    </div>
                </div>


                <div class="text-center">
                    <div class="row justify-content-center">
                        <button type="submit" value="Submit" class="btn-form" formmethod="post">Register</button>
                    </div>
                </div>
                <div class="text-center mt-3 mb-5">
                    Already registrered?  <a href="">Login now</a>
                </div>
            </div>
        </form>
    </section>
    <div class="container-fluid footer">
        <div class="row">
            <div class="col-sm-3 logo-footer">
                <a href=#><img src="~/Assets/image/white-logo-transparent-background.png" class="img-footer"></a>
            </div>
            <div class="col-sm-6 footer-links-1">
                <p class="footer-links">
                    <a href="@Url.Action("Index","Home")">HOME</a>
                    <a href="@Url.Action("About","Home")">ABOUT</a>
                    <a href="#">TESTIMONIALS</a>
                    <a href="@Url.Action("Faq","Home")">FAQS</a>
                    <a href="#">INSURANCE</a>
                    <a href="#">POLICY</a>
                    <a href="#">IMPRESSUM</a>
                </p>
            </div>
            <div class="col-sm-3 social-footer">

                <a href=#><img src="~/Assets/image/facebook.png" style="padding-right: 15px;"></a>
                <a href=#><img src="~/Assets/image/insta.png"></a>
            </div>
        </div>
        <div class="footer-2">
            <hr style="border: #424242 1px solid;text-align: center;width: 1150px;">
        </div>

        <div class="footer-3">
            <p>©2018 Helperland. All rights reserved. <a href=# style="color: #9ba0a3;">Terms and Conditions</a> | <a href=# style="color: #9ba0a3;">Privacy Policy</a></p>
        </div>
    </div>
    </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/3960232895.js"></script>
</body>
</html>



 


