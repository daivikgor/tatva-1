
@model Helperland.ViewModel.ContactViewModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Assets/css/contactus.css">
</head>

<section class="contact-section">
    <img src="~/Assets/image/group-16.png" class="contact-banner">
    <div class="container">
        <h1 class="txt-contact">Contact us</h1>
        <div class="diamond">
            <hr class=diam-break-left>
            <img src="~/Assets/image/forma-1-copy-5.png" class="img-diamond">
            <hr class="diam-break-right">
        </div>

        <div class="add-fon">
            <div class="address">
                <img src="~/Assets/image/location.png" class="img-add">
                <h3 class="txt-add">1111 Lorem ipsum text 100,<br>Lorem ipsum AB</h3>
            </div>
            <div class="address">
                <img src="~/Assets/image/phone-call.png" class="img-add">
                <h3 class="txt-add">+49 (40) 123 56 7890<br>+49 (40) 123 56 0000</h3>
            </div>
            <div class="address">
                <img src="~/Assets/image/mail.png" class="img-add">
                <h3 class="txt-add">info@helperland.com</h3>
            </div>
        </div>
    </div>
</section>

<section class="form-section">
    <div>
        <h2 class="txt-get-in">Get in touch with us</h2>
    </div>
    @if (ViewBag.flag)
    {
        <div class="alert alert-success alert-dismissible fade show justify-content-center" role="alert">
            <strong>Your query has been submitted successfully</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="container">

        <form enctype="multipart/form-data" asp-controller="Contact" asp-action="Contact" method="post">
            <div class="row justify-content-center">
                <div class="col-lg-3 col-sm-6 col">
                    <div class=form-group>
                        <input type="text" class="form-control" required asp-for="FirstName" id="fname" placeholder="First name">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col">
                    <div class=form-group>
                        <input type="text" class="form-control" required asp-for="LastName" id="lname" placeholder="Last name">
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-3 col-sm-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">+44</span>
                        </div>
                        <input type="tel" class="form-control" required asp-for="PhoneNumber" id="phone" placeholder="Mobile number">

                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-6 col-sm-12">
                    <div class="form-group">
                        <select class="form-control" asp-for="Subject">
                            <option value="" hidden>Subject</option>
                            <option value="contact">contact</option>
                            <option value="private">Private</option>
                            <option value="FAQ">FAQ</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-6 col-sm-12">
                    <div class="form-group">
                        <textarea class="form-control" id="msg" asp-for="Message" placeholder="Message" type="text" style="height: 140px;"></textarea>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn-form" formmethod="post">Submit</button>
            </div>

        </form>
    </div>

</section>
<section class="map-section">
    <div class="mapouter">
        <div class="gmap_canvas"><iframe class="gmap_iframe" width="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=936&amp;height=286&amp;hl=en&amp;q=nail-salon&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe><a href="https://www.fridaynightfunkin.net/friday-night-funkin-mods-fnf-play-online/">FNF Mods</a></div>
        <style>
            .mapouter {
                position: relative;
                text-align: right;
                width: 100%;
                height: 286px;
            }

            .gmap_canvas {
                overflow: hidden;
                background: none !important;
                width: 100%;
                height: 286px;
            }

            .gmap_iframe {
                height: 286px !important;
            }
        </style>
    </div>
</section>

